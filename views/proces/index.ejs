
    <h1>Процессы</h1>
    <a href="/process/create">Добавить процессы</a>
    <form action="/process/" method="GET">
        <label for="beforeDate">До</label>
        <input type="date" name="beforeDate" value="<%=searchOptions.beforeDate%>">
        <label for="beforeDate">После</label>
        <input type="date" name="afterDate" value="<%=searchOptions.afterDate%>">
        <input placeholder="Название детали" type="text" name="detail" value="<%= %>">
        <input placeholder="Название изделия"type="text" name="product" value="<%= %>">
        <input placeholder="Имя мастера" type="text" name="master" value="<%= %>">
        <select name="departament"></select>
        <input placeholder="Количество больше чем" type="number" name="quantityMore" value="<%= %>">
        <input placeholder="Количество меньше чем"type="number" name="quantityLess" value="<%= %>">
        <input placeholder="Цена больше чем" type="number" name="priceMore" value="<%= %>">
        <input placeholder="Цена меньше чем"type="number" name="priceLess" value="<%= %>">
        <input type="submit" value="Искать">
        <button id="clearBtn">Очистить</button>
    </form>
<table align="center"rules="cols">
    <tr>
        <td>Дата</td>
        <td>Детали</td>
        <td>Операция</td>
        <td>Изделие</td>
        <td>Мастер</td>
        <td>Отдел</td>
        <td>Количество</td>
        <td>Стоимость</td>
    </tr>
    <% procs.forEach(proc => { %>
        <tr> 
            <td><%= proc.processDate.toLocaleDateString() %></td>
            <td><%= proc.detail.productName%></td>
            <td><%= proc.processName %></td>
            <td><%= proc.product.productName%></td>
            <td><%= proc.master.employeeName%></td> 
            <%if(proc.departament !== undefined) { %>
                <td><%= proc.departament.departamentName%></td> 
            <%} else {%>
                <td></td>
                <%  }%>
            <td><%= proc.quantity%></td>
            <td><%= proc.processPrice%></td> 
            <td>
            <form method="POST" action="/<%= proc.id %>?_method=DELETE">
                <button type="submit">Удалить</button>
            </form>
            <a href="/process/<%= proc.id %>/edit">Изменить</a> </td> 
        </tr>
        
    <%});%>
</table>
<script src="../scripts/clear.js"></script>